<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <h1>
    <%= title %>
  </h1>
  <p>Personal Glossary</p>
  </p>
  <table border="2px" cellspacing="0" cellpadding="3">
    <th>ID</th>
    <th>Term</th>
    <th>Description</th>
    <th>Reference</th>
    <% items.forEach((item)=> {%>
      <tr>
        <td>
          <%= item.id %>
        </td>
        <td>
          <%= item.term %>
        </td>
        <td>
          <%= item.description %>
        </td>
        <td>
          <%= item.reference %>
        </td>
      </tr>
      <%});%>
  </table>
</body>

</html>